<h2>Sign up</h2>
<h3><%= link_to 'Top',root_path , class: "index" %></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class='field'>
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"", maxlength:"20", size: 20 %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class='field'>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class:"input-default", id:"nickname", placeholder:"Soup", maxlength:"40" %>
  </div>
  
  <div class='field'>
    <%= f.label :family_name %><br />
    <%= f.text_field :family_name, class:"input-default", id:"nickname", placeholder:" Ramen", maxlength:"40" %>
  </div>
  
  <div class='field'>
    <%= f.label :country %><br />
    <%= f.text_field :country, class:"input-default", id:"nickname", placeholder:" Japan", maxlength:"30", size: 15 %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
